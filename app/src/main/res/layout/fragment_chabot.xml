<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".ChatbotFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="761dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_rounded_corners"
        tools:context=".ChatbotFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="60dp"
            android:text="Support"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="45dp"
            android:text="chat"
            android:textColor="#BDBDBD"
            android:textSize="16dp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/online">
        </ImageView>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_rounded_corners2">
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_rounded_corners3">

        <ImageButton
            android:id="@+id/emojiButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/emoji">
        </ImageButton>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:background="@drawable/send"
            android:text="Send" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your query here" />

        <!--        <ImageButton-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="bottom|right"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:background="@drawable/send"-->
<!--            android:onClick="@{() -> viewModel.sendRequest(inputEditText.text.toString())}"-->
<!--            app:tint="@color/primary"></ImageButton>-->

    </LinearLayout>

    <Button
        android:id="@+id/menuButton"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_burguer_menu"
        app:iconSize="40dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</FrameLayout>